# Nunflix Environment Configuration
# Copy this file to .env.local and fill in the values

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# API Configuration
TMDB_API_KEY=your-tmdb-api-key
TMDB_API_BASE_URL=https://api.themoviedb.org/3

# Authentication Settings
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Video Player Settings
NEXT_PUBLIC_DEFAULT_SERVER=server1
NEXT_PUBLIC_ENABLE_PREMIUM_SERVERS=false

# Analytics (Optional - for production)
NEXT_PUBLIC_ANALYTICS_ID=

# Content Delivery Network (Optional - for production)
NEXT_PUBLIC_CDN_URL=

# Deployment Environment
NODE_ENV=development

# Rate Limiting (Optional - for production)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Sentry Error Tracking (Optional - for production)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Feature Flags
NEXT_PUBLIC_ENABLE_NEW_PLAYER=false
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_WATCHLIST=true
